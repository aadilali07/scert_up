@model List<scert_upMVC.Models.manage_news>
@{
    ViewBag.Title = "news_view";
    Layout = "~/Views/Shared/admin_mst.cshtml";
}

<div class="pcoded-content">
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-body">
                    <!-- for change area -->
                    <h3 class="add_heading">List Of News </h3>

                    <div class="card">
                        <div class="card-block table-border-style">

                            <div class="table-responsive">
                                <table class="table" id="myTable" class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>News Heading</th>
                                            <th>Date</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <th scope="row">@item.heading</th>
                                                <td>@item.date</td>
                                                <td>
                                                    <a href="/admin/add_news?id=@(item.id)"><i
                                                            class="icofont icofont-edit"></i></a>
                                                    <a href="/admin/news_view?id=@(item.id)"><i
                                                            class="icofont icofont-trash" style="color:red;"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>


                </div>

            </div>

            <div id="styleSelector">

            </div>
        </div>
    </div>
</div>
