@model List<scert_upMVC.Models.manage_ebook>

@{
    ViewBag.Title = "ebook_view";
    Layout = "~/Views/Shared/admin_mst.cshtml";
}


<div class="pcoded-content">
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-body">
                    <!-- for change area -->
                    <h3 class="add_heading">List of E-Book </h3>

                    <div class="card">
                        <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search..." title="Type in a name">

                        <div class="card-block table-border-style">
                            <div class="table-responsive">
                                <table class="table" id="myTable">
                                    <thead>
                                        <tr>
                                            <th>Course</th>
                                            <th>Subject</th>
                                            <th>File Name</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <th scope="row">@item.Course</th>
                                                <td>@item.Subject</td>
                                                <td>@item.File_Name</td>
                                                <td>
                                                    <a href="/admin/add_ebook?id=@(item.id)"><i class="icofont icofont-edit"></i></a>
                                                    <a href="/admin/delete_ebook?id=@(item.id)"><i class="icofont icofont-trash" style="color:red;"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>


                    <!-- for change area  end-->
                </div>

            </div>

            <div id="styleSelector">

            </div>
        </div>
    </div>
</div>
