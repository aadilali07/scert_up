
@{
    ViewBag.Title = "add_faculty";
    Layout = "~/Views/Shared/admin_mst.cshtml";
}

<div class="pcoded-content">
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">

                <div class="page-body">
                    <!-- for change area -->
                    <h3 class="add_heading">Add Faculty Details </h3>
                    <div class="page-wrapper" style="background-color: white;">

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Name</label> <br>
                            <div class="col-sm-10">
                                <input type="text" class="form-control"
                                       placeholder="Enter Name here...">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Designation</label> <br>
                            <div class="col-sm-10">
                                <input type="text" class="form-control"
                                       placeholder="Enter designation here...">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Joining Date</label> <br>
                            <div class="col-sm-10">
                                <input type="date" class="form-control"
                                       placeholder="Enter joining here...">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Mobile Number</label> <br>
                            <div class="col-sm-10">
                                <input type="number" class="form-control"
                                       placeholder="Enter mobile number here...">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Email Id</label> <br>
                            <div class="col-sm-10">
                                <input type="email" class="form-control"
                                       placeholder="Enter email here...">
                            </div>
                        </div>



                        <div class="row m-t-30">
                            <div class="col-md-12">
                                <button type="button"
                                        class="btn btn-primary btn-md btn-block waves-effect text-center m-b-20">
                                    Save
                                </button>
                            </div>
                        </div>

                    </div>
                    <!-- for change area end  -->
                </div>
            </div>

            <div id="styleSelector">

            </div>
        </div>
    </div>
</div>

