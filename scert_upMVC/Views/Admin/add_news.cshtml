@model scert_upMVC.Models.manage_news
@{
    ViewBag.Title = "add_news";
    Layout = "~/Views/Shared/admin_mst.cshtml";
}

<div class="pcoded-content">
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">

                <div class="page-body">
                    <!-- for change area -->
                    <h3 class="add_heading">Add News </h3>
                    @using (Html.BeginForm("news_insert", "admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="page-wrapper" style="background-color: white;">


                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">News Heading</label> <br>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="heading" placeholder="Enter news heading..."  value="@Model.heading">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">News Description </label> <br>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="desc" placeholder="Enter news description..." value="@Model.desc">
                                </div>
                            </div>


                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Date</label> <br>
                                <div class="col-sm-10">
                                    <input type="date" class="form-control" name="date" value="@Model.date">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Upload  File</label> <br>
                                <div class="col-sm-10">
                                    <input type="file" id="" name="fileupload1" class="dropify" data-default-file="@Model.filepath" />
                                    <input type="hidden" name="filepath" value="@Model.filepath" />
                                </div>
                            </div>


                            <div class="row m-t-30">
                                <div class="col-md-12">
                                    <input type="hidden" name="id" value="@Model.id" />
                                    <button type="submit" class="btn btn-primary btn-md btn-block waves-effect text-center m-b-20">Submit</button>
                                </div>
                            </div>

                        </div>
                    }
                        <!-- for change area end  -->
                </div>

            </div>

            <div id="styleSelector">

            </div>
        </div>
    </div>
</div>

